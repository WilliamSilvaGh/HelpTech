@code {
    private bool _IsLogged;
    private bool _EhAdmin;
    private bool modalSair = false;

    private void Sair()
    {
        UsuarioLogado.IsLogged = false;
        UsuarioLogado.EhAdmin = false;

        AuthService.TriggerLoggedOut();

        NavigationManager.NavigateTo("/");
    }

    public void ConfirmarSaida()
    {
        modalSair = true;
        StateHasChanged();
    }

    public void CancelarSaida()
    {
        modalSair = false;
        StateHasChanged();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _IsLogged = UsuarioLogado.IsLogged;
            _EhAdmin = UsuarioLogado.EhAdmin;

            StateHasChanged();
        }
    }
}
